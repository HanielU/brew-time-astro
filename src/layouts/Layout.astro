---
export interface Props {
  title: string;
}
const { title } = Astro.props as Props;

import TheNav from "../components/navigation/TheNav.astro";
import TheFooter from "../components/navigation/TheFooter.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Haniel Ubogu" />
    <meta name="theme-color" content="#101011" />

    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative font-bebas text-white bg-dark">
      <TheNav />

      <div class="relative">
        <slot />
      </div>

      <TheFooter />
    </div>
  </body>
</html>
