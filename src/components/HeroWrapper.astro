---
export interface Props {
  heroBgImg: string;
  class: string;
  withGrain?: boolean;
}

const { heroBgImg, class: className, withGrain = true } = Astro.props;

import grainImg from "~/assets/images/hero-bg-grain-1.png";
---

<section
  class:list={[
    "bg-(cover center) text-center relative z-1 overflow-hidden",
    "after-(content-empty abs top-0 left-0 square-full z--1)",
    className,
  ]}
  style={`background-image: url(${heroBgImg});`}
>
  <div class="py-36 md-py-50">
    <slot />
  </div>

  {
    withGrain && (
      <>
        <div
          class:list={[
            "abs h-200px rotate-55 bottom--20px left--80px",
            "md-(h-300px rotate-45 bottom--40px left--100px)",
            "lg-(h-500px rotate-35 bottom--80px left--200px)",
          ]}
        >
          <img class="h-full" src={grainImg} alt="" />
        </div>

        <div
          class:list={[
            "abs h-200px rotate--45 bottom--70px right--90px",
            "md-(h-300px bottom--80px right--130px)",
            "lg-(h-500px rotate--20 bottom--120px right--200px)",
          ]}
        >
          <img class="h-full" src={grainImg} alt="" />
        </div>
      </>
    )
  }
</section>
